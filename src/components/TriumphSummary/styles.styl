.recordSummary
  display: flex

.recordAccessory
  margin-right: 5px

.recordMain
  flex: 1

.iconWrapper
  float: left
  background: #1A1A1A
  border-radius: 3px
  margin-right: 10px
  padding: 3px

.icon
  height: 35px
  display: block

.link
  color: inherit
  text-decoration: none

  &:hover
    text-decoration: underline

.desc
  display: block
  max-width: 400px
  white-space: initial

  @media screen and (max-width: 1000px)
    display: none

.points
  display: inline-block
  margin-left: 5px
