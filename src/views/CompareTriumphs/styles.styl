.tbody
  content: 'hello'

  [data-depth="0"]
    td:first-of-type
      padding-left: 0px

    .heading
      font-size: 20px

  [data-depth="1"]
    td:first-of-type
      padding-left: 10px

    .heading
      font-size: 18px

  [data-depth="2"]
    td:first-of-type
      padding-left: 20px

    .heading
      font-size: 16px

  [data-depth="3"]
    td:first-of-type
      padding-left: 30px

    .heading
      font-size: 14px

.link
  color: inherit
  text-decoration: none

  &:hover
    text-decoration: underline

.heading
  composes: link
  font-weight: bold

.cell
  color: white

.cellCompleted
  composes: cell
  background: #2ecc71
  border-color: #2ecc71 !important


.cellIncomplete
  composes: cell
  background: #e74c3c
  border-color: #e74c3c !important
