@import '../../common.styl'

.root
  content: 'root'
  position: relative
  padding-top: 5px

.inner
  max-width: 1200px
  padding: 0 15px
  margin: auto

.grandLayout
  margin: 0 -10px
  display: block

  +fromTablet()
    display: flex

.main
  +fromTablet()
    flex: 1 0 50%
  +fromDesktop()
    flex: 1 0 40%

.rest
  +fromTablet()
    flex: 1 0 50%

  +fromDesktop()
    flex: 1 0 60%
    display: flex
    flex-wrap: wrap

  > *
    flex: 1 0 40%

.topBit
  display: flex
  align-items: flex-end
  justify-content: space-between
  margin: 15px 0

.loading
  margin-left: 15px
  font-size: 16px

.name
  margin: 0
  line-height: 1
  font-size: 28px
